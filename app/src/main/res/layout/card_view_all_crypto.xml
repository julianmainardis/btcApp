<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        style="@style/text_view_card_view"
        android:id="@+id/card_view_all_crypto_currency"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_card_view"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_view_all_crypto_price"
        android:layout_width="wrap_content"
        style="@style/text_view_card_view"
        android:layout_marginTop="@dimen/margin_text_view_card_view"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_all_crypto_currency" />

</androidx.constraintlayout.widget.ConstraintLayout>
